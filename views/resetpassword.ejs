<section id="hero-login" class="hero hero-mini">
	<div class="hero-container">
		<h3>
			<strong>Recover Account</strong>
		</h3>
		<h2>Login to your account for more</h2>
	</div>
</section>
<!-- End Hero -->

<main id="main">
	<section id="programs" class="programs">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-5 col-md-6 program-box m-auto">
					<div class="box">
						<h1 class="text-center mb-3">
							<i class="bi bi-person-add"></i>&nbsp;&nbsp;Reset Password
						</h1>
						<%- include ('./partials/messages') %>
						<form action="/resetpassword" method="POST">
							<div class="form-group mb-3">
								<!-- <label for="password">Password</label> -->
								<input
									type="password"
									id="password"
									name="password"
									class="form-control"
									placeholder="Reset Password"
									value="<%= typeof password != 'undefined' ? password : '' %>" />
							</div>
							<div class="form-group mb-3">
								<!-- <label for="password2">Confirm Password</label> -->
								<input
									type="password"
									id="password2"
									name="password2"
									class="form-control"
									placeholder="Confirm Password"
									value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
							</div>
							<button
								type="submit"
								class="btn btn-buy btn-block mt-1">
								Register
							</button>
						</form>
						<p class="caption-text mt-4">
							Have An Account? <a href="/login">Login</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>

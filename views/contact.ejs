<section id="hero-contact" class="hero hero-mini">
    <div class="hero-container">
        <h3>
            <strong>Contact Us</strong>
        </h3>
        <h2>How can we help you today?</h2>
    </div>
</section>
<!-- End Hero -->

<main id="main">
    <div class="container">
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="row">
                <div class="col-lg-4 mx-auto contact-col">
                    <div class="info contact-card-section mx-auto">
                        <h2 class="h1 mb-3 fw-semibold text-center">
                            Get in touch with us
                        </h2>
                        <div class="card text-center mb-4 mx-auto">
                            <i class="bi bi-envelope contact-card-icon"></i>
                            <div class="card-body">
                                <h5 class="card-title lead fw-semibold">
                                    How can we help you?
                                </h5>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    Send us an email
                                </h6>
                                <a
                                    href="mailto:teamaccelerateacademy@gmail.com"
                                    class="card-link my-2 underline"
                                    >teamacc-academy@gmail.com</a
                                >
                            </div>
                        </div>

                        <div class="card text-center my-4 mx-auto">
                            <i class="bi bi-telephone-outbound contact-card-icon"></i>
                            <div class="card-body">
                                <h5 class="card-title lead fw-semibold">
                                    More comfortable to talk?
                                </h5>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    Give us a call today
                                </h6>
                                <a
                                    href="tel:9353759748"
                                    class="card-link my-2 underline"
                                    >(9353) 759 748</a
                                >
                            </div>
                        </div>

                        <div class="card text-center my-4 mx-auto">
                            <i class="bi bi-geo-alt contact-card-icon"></i>
                            <div class="card-body">
                                <h5 class="card-title lead fw-semibold">
                                    Ready to take the road?
                                </h5>
                                <h6
                                    class="card-subtitle mb-2 text-body-secondary"
                                >
                                    #9, 2nd Cross, Ashoknagar,<br />Basavanagudi,
                                    Bangalore.<br />560050
                                </h6>
                                <a
                                    href="tel:9353759748"
                                    class="card-link my-2 underline"
                                    >Open in Google Maps</a
                                >
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FORM SECTION -->
                <div class="col-lg-8 mt-3 mt-lg-0 mx-auto contact-col" id="contact-section">
                    <h2 class="h1 my-3 fw-semibold text-center">
                        Send us a message
                    </h2>
                    <%- include('./partials/messages') %>
                    <form
                        action="/contact"
                        method="POST"
                        class="contact-form"
                        id="contact-form"
                    >
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input
                                    type="text"
                                    name="name"
                                    class="form-control"
                                    id="name"
                                    placeholder="Your Name"
                                    value="<%= typeof name != 'undefined' ? name : '' %>"
                                />
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input
                                    type="email"
                                    class="form-control"
                                    name="email"
                                    id="email"
                                    placeholder="Your Email"
                                    value="<%= typeof email != 'undefined' ? email : '' %>"
                                />
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input
                                type="text"
                                class="form-control"
                                name="subject"
                                id="subject"
                                placeholder="Subject"
                                value="<%= typeof subject != 'undefined' ? subject : '' %>"
                            />
                        </div>
                        <div class="form-group mt-3">
                            <textarea
                                class="form-control"
                                name="message"
                                rows="5"
                                placeholder="Message"
                                value="<%= typeof message != 'undefined' ? message : '' %>"
                            ></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="mt-3 btn" id="contact-button">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- End Contact Section -->
    </div>
</main>
